# Maintainer: Tyler Ristimaki <tpristimaki@gmail.com>

pkgname=ebus-bin
pkgver=1.0.0
pkgrel=1
pkgdesc="An event bus that allows for inter-process communication by emitting and polling events on channels"
arch=('x86_64')
url="https://github.com/Tylo-6/ebus"
license=('GPL-3.0')
depends=('glibc')
makedepends=('gcc' 'g++')
source=("https://github.com/Tylo-6/eBus/archive/refs/tags/$pkgver-release.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$srcdir/eBus-$pkgver-release"

    # Compile all C++ source files using g++
    g++ -fPIC -shared -o ebus/usr/lib/memory.so src/memory.cpp
    g++ -fPIC -shared -o ebus/usr/lib/emitter.so src/emitter.cpp
    g++ -fPIC -shared -o ebus/usr/lib/listener.so src/listener.cpp
}

package() {
    cd "$srcdir/eBus-$pkgver-release"

    install -Dm755 "lib/libebus.so" "$pkgdir/usr/lib/libebus.so"
    
    install -Dm644 "include/ebus.h" "$pkgdir/usr/include/ebus.h"
    
    install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 "README.md" "$pkgdir/usr/share/doc/$pkgname/README.md"
}
